{
  "metadata": {
    "version": "4.1",
    "lastUpdated": "2025-06-13",
    "description": "Enhanced surge detection framework with geopolitical, sector-specific, and micro-cap optimizations",
    "author": "Enhanced Framework with Sector-Specific and Event-Driven Signals",
    "enhancements": [
      "Geopolitical event-driven signals for energy and defense sectors",
      "Micro-cap extreme volatility patterns",
      "Sector-specific signals (tankers, biotech, spin-offs)",
      "Information asymmetry detection",
      "Catalyst proximity scoring",
      "Enhanced risk-adjusted scoring"
    ],
    "targetAccuracy": "62-67%",
    "falsePositiveTarget": "12-14%"
  },
  
  "signalCategories": {
    "geopoliticalCatalysts": {
      "name": "Geopolitical & Macro Event Catalysts",
      "description": "Sector-wide catalysts from global events and macro shifts",
      "weight": 0.15,
      "priority": 1,
      "signals": {
        "energyCrisisAmplification": {
          "id": "GEO_001",
          "name": "Energy Supply Disruption",
          "description": "Oil price spikes and energy transport opportunities",
          "weight": 0.40,
          "dataRequired": ["oilPriceChange", "sectorExposure", "fleetSize"],
          "thresholds": {
            "trigger1": {
              "condition": "oil price >5% intraday AND (energy OR tanker sector)",
              "score": 65,
              "volatilityMultiplier": 1.5,
              "description": "Energy disruption opportunity"
            },
            "trigger2": {
              "condition": "oil >10% weekly AND tanker rates >50% AND small fleet",
              "score": 85,
              "volatilityMultiplier": 2.0,
              "description": "Extreme energy transport squeeze"
            },
            "trigger3": {
              "condition": "military conflict + shipping lanes AND tanker stock",
              "score": 100,
              "volatilityMultiplier": 3.0,
              "description": "Critical shipping bottleneck"
            }
          },
          "affectedSectors": ["energy", "shipping", "tankers", "oil_services"]
        },
        "defenseSpendingSurge": {
          "id": "GEO_002",
          "name": "Defense Budget Expansion",
          "description": "Military conflicts driving defense spending",
          "weight": 0.35,
          "dataRequired": ["conflictProximity", "defenseExposure", "contractPipeline"],
          "thresholds": {
            "trigger1": {
              "condition": "new military conflict AND defense contractor",
              "score": 60,
              "description": "Defense spending catalyst"
            },
            "trigger2": {
              "condition": "NATO Article 5 OR major escalation AND defense pure-play",
              "score": 90,
              "description": "Emergency defense procurement"
            }
          }
        },
        "supplyChainRerouting": {
          "id": "GEO_003",
          "name": "Supply Chain Disruption Premium",
          "description": "Sanctions or blockades creating opportunities",
          "weight": 0.25,
          "dataRequired": ["sanctionImpact", "alternativeRoutes", "marketShare"],
          "thresholds": {
            "trigger1": {
              "condition": "major sanctions AND alternative supplier position",
              "score": 70,
              "description": "Supply chain beneficiary"
            }
          }
        }
      }
    },
    
    "microCapDynamics": {
      "name": "Extreme Micro-Cap Volatility Patterns",
      "description": "Ultra-low float and market cap creating explosive conditions",
      "weight": 0.12,
      "priority": 2,
      "signals": {
        "nanoFloatExplosion": {
          "id": "MICRO_001",
          "name": "Nano-Float Squeeze",
          "description": "Sub-2M float creating extreme volatility",
          "weight": 0.50,
          "dataRequired": ["floatShares", "dailyVolume", "marketCap"],
          "thresholds": {
            "trigger1": {
              "condition": "float < 2M AND volume > float * 3 AND catalyst",
              "score": 75,
              "volatilityMultiplier": 3.0,
              "description": "Nano-float volatility setup"
            },
            "trigger2": {
              "condition": "float < 1M AND market cap < $20M AND news",
              "score": 90,
              "volatilityMultiplier": 5.0,
              "riskAdjustment": "+8",
              "description": "Extreme micro-cap conditions"
            }
          }
        },
        "thinTradingBreakout": {
          "id": "MICRO_002",
          "name": "Illiquidity Premium Capture",
          "description": "Breakout from extremely thin trading",
          "weight": 0.50,
          "dataRequired": ["avgDailyVolume", "bidAskSpread", "priceAction"],
          "thresholds": {
            "trigger1": {
              "condition": "avg volume < $100k AND sudden 10x volume",
              "score": 65,
              "description": "Illiquidity breakout beginning"
            },
            "trigger2": {
              "condition": "spread > 5% narrows to < 1% AND volume surge",
              "score": 85,
              "description": "Liquidity transformation"
            }
          }
        }
      }
    },
    
    "sectorSpecificPatterns": {
      "name": "Industry-Specific Surge Patterns",
      "description": "Unique patterns for specific sectors",
      "weight": 0.10,
      "priority": 2,
      "signals": {
        "tankerRateSqueeze": {
          "id": "SECTOR_001",
          "name": "Shipping Rate Explosion",
          "description": "Freight rate spikes driving tanker stocks",
          "weight": 0.25,
          "dataRequired": ["freightRates", "vesselCount", "charterBacklog"],
          "applicableSectors": ["shipping", "tankers"],
          "thresholds": {
            "trigger1": {
              "condition": "freight rates >50% weekly AND small fleet",
              "score": 70,
              "description": "Rate spike opportunity"
            },
            "trigger2": {
              "condition": "rates >100% AND single vessel AND spot exposure",
              "score": 95,
              "concentrationPenalty": -3,
              "description": "Extreme rate squeeze"
            }
          }
        },
        "biotechBinaryEvent": {
          "id": "SECTOR_002",
          "name": "Clinical Binary Catalyst",
          "description": "Make-or-break clinical trial events",
          "weight": 0.25,
          "dataRequired": ["trialPhase", "pdufa", "cashRunway"],
          "applicableSectors": ["biotech", "pharma"],
          "thresholds": {
            "trigger1": {
              "condition": "Phase 3 data < 30 days AND single asset",
              "score": 80,
              "binaryMultiplier": 4.0,
              "description": "Binary trial event"
            }
          }
        },
        "spinoffDiscovery": {
          "id": "SECTOR_003",
          "name": "Post-Spinoff Revaluation",
          "description": "Information asymmetry in recent spinoffs",
          "weight": 0.25,
          "dataRequired": ["daysSinceSpinoff", "parentCompany", "analystCoverage"],
          "thresholds": {
            "trigger1": {
              "condition": "spinoff < 90 days AND no analyst coverage",
              "score": 65,
              "informationBonus": "+4",
              "description": "Spinoff discovery phase"
            },
            "trigger2": {
              "condition": "spinoff < 30 days AND forced selling ended",
              "score": 85,
              "discoveryMultiplier": 1.5,
              "description": "Post-spinoff inflection"
            }
          }
        },
        "spaceDefensePivot": {
          "id": "SECTOR_004",
          "name": "Space/Satellite Defense Play",
          "description": "Space technology military applications",
          "weight": 0.25,
          "dataRequired": ["spaceTech", "militaryContracts", "satelliteAssets"],
          "thresholds": {
            "trigger1": {
              "condition": "space assets AND new defense contract",
              "score": 75,
              "description": "Space defense validation"
            }
          }
        }
      }
    },
    
    "informationAsymmetry": {
      "name": "Information Edge Detection",
      "description": "Detecting information asymmetries and discovery opportunities",
      "weight": 0.08,
      "priority": 3,
      "signals": {
        "darkPoolAccumulation": {
          "id": "INFO_001",
          "name": "Hidden Institutional Loading",
          "description": "Dark pool activity revealing smart money",
          "weight": 0.40,
          "dataRequired": ["darkPoolRatio", "blockTrades", "priceStability"],
          "thresholds": {
            "trigger1": {
              "condition": "dark pool > 40% AND price stable AND low volume",
              "score": 60,
              "description": "Stealth accumulation detected"
            },
            "trigger2": {
              "condition": "dark pool > 60% for 5+ days AND block trades",
              "score": 85,
              "description": "Major hidden positioning"
            }
          }
        },
        "insiderClusterBuying": {
          "id": "INFO_002",
          "name": "Insider Conviction Cluster",
          "description": "Multiple insiders buying aggressively",
          "weight": 0.35,
          "dataRequired": ["insiderCount", "purchaseSize", "insiderHistory"],
          "thresholds": {
            "trigger1": {
              "condition": "3+ insiders buying within 30 days",
              "score": 65,
              "description": "Insider cluster forming"
            },
            "trigger2": {
              "condition": "CEO + CFO buying > 5% salary AND near 52w low",
              "score": 90,
              "description": "C-suite conviction buy"
            }
          }
        },
        "socialSentimentDivergence": {
          "id": "INFO_003",
          "name": "Sentiment Arbitrage",
          "description": "Price lagging extreme sentiment shifts",
          "weight": 0.25,
          "dataRequired": ["socialMentions", "sentimentScore", "priceAction"],
          "thresholds": {
            "trigger1": {
              "condition": "mentions >1000% AND sentiment >80 AND price flat",
              "score": 55,
              "description": "Sentiment-price divergence"
            }
          }
        }
      }
    },
    
    "catalystProximity": {
      "name": "Time-Sensitive Catalyst Scoring",
      "description": "Weighting signals by catalyst proximity and certainty",
      "weight": 0.05,
      "priority": 3,
      "signals": {
        "imminentCatalyst": {
          "id": "TIME_001",
          "name": "Sub-7 Day Catalyst",
          "description": "Known catalyst within one week",
          "weight": 0.50,
          "dataRequired": ["catalystDate", "catalystType", "marketAwareness"],
          "thresholds": {
            "trigger1": {
              "condition": "catalyst < 7 days AND low awareness",
              "score": 70,
              "timingMultiplier": 2.0,
              "description": "Imminent catalyst setup"
            },
            "trigger2": {
              "condition": "catalyst < 3 days AND binary outcome",
              "score": 90,
              "timingMultiplier": 3.0,
              "description": "Immediate catalyst trigger"
            }
          }
        },
        "catalystChain": {
          "id": "TIME_002",
          "name": "Sequential Catalyst Series",
          "description": "Multiple catalysts in succession",
          "weight": 0.50,
          "dataRequired": ["catalystCount", "timeframe", "catalystTypes"],
          "thresholds": {
            "trigger1": {
              "condition": "3+ catalysts within 30 days",
              "score": 75,
              "description": "Catalyst momentum building"
            }
          }
        }
      }
    }
  },
  
  "enhancedRiskScoring": {
    "description": "Dynamic risk adjustment based on market conditions",
    "microCapPenalty": {
      "threshold": "<$10M market cap",
      "scoreAdjustment": -15,
      "volatilityWarning": "extreme"
    },
    "singleAssetRisk": {
      "condition": "single product/vessel/asset",
      "concentrationPenalty": -10
    },
    "liquidityRisk": {
      "thinTrading": {
        "avgVolume": "<$50k daily",
        "scoreAdjustment": -5
      },
      "wideSpread": {
        "bidAskSpread": ">3%",
        "scoreAdjustment": -8
      }
    }
  },
  
  "multiFactorConfirmation": {
    "description": "Enhanced multi-signal requirements",
    "minimumCategories": 3,
    "minimumTotalScore": 180,
    "categoryWeighting": {
      "critical": {
        "requiredCategories": ["volume", "catalyst", "technical"],
        "bonusCategories": ["geopolitical", "microCap", "information"],
        "minimumScores": {
          "primary": 60,
          "secondary": 45,
          "tertiary": 30
        }
      }
    }
  },
  
  "adaptiveThresholds": {
    "description": "Market condition-based threshold adjustments",
    "volatilityRegimes": {
      "high": {
        "vixThreshold": ">25",
        "scoreMultiplier": 0.8,
        "note": "Higher bar in volatile markets"
      },
      "low": {
        "vixThreshold": "<15",
        "scoreMultiplier": 1.2,
        "note": "Lower bar in calm markets"
      }
    },
    "sectorRotation": {
      "hotSector": {
        "recentPerformance": ">20% monthly",
        "scoreMultiplier": 0.9,
        "note": "Reduce scores in overheated sectors"
      }
    }
  },
  
  "alertPrioritization": {
    "ultraCritical": {
      "minimumScore": 300,
      "requiredConditions": [
        "3+ signal categories",
        "catalyst < 14 days",
        "sustained volume pattern",
        "no risk penalties"
      ],
      "expectedHitRate": "70-75%"
    },
    "critical": {
      "minimumScore": 220,
      "requiredConditions": [
        "2+ signal categories",
        "volume confirmation",
        "market cap > $25M"
      ],
      "expectedHitRate": "55-60%"
    },
    "elevated": {
      "minimumScore": 160,
      "requiredConditions": [
        "strong single category",
        "improving technicals"
      ],
      "expectedHitRate": "40-45%"
    }
  }
}